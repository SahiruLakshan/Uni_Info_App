<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_bg">

    <TextView
        android:id="@+id/tv_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First Year - First Semester\nExam Registration is open\nnow.."
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_registration_period"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exam Registration is open from 25th April 2025 to 1st May 2025."
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/tv_instructions_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To register:"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="12dp"
                android:background="@android:color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Log into the Student Information System (SIS) using your student ID and password."
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="12dp"
                android:background="@android:color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Navigate to the Exam Registration section on the dashboard."
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="12dp"
                android:background="@android:color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Select your courses and complete the registration process."
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="12dp"
                android:background="@android:color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Double-check your registered subjects before final submission."
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <TextView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textSize="14sp"
            android:textColor="#6366f1"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</LinearLayout>